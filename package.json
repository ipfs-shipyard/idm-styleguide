{
  "name": "@idm/web-uikit",
  "version": "0.0.0",
  "description": "IDM's living web UI kit",
  "main": "dist/index.js",
  "keywords": [
    "idm",
    "web-uikit",
    "react"
  ],
  "author": "Pedro Santos <pedro.santos@moxy.studio>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ipfs-shipyard/idm-web-uikit/issues"
  },
  "homepage": "https://github.com/ipfs-shipyard/idm-web-uikit#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ipfs-shipyard/idm-web-uikit.git"
  },
  "scripts": {
    "start": "start-storybook -p 3010 -c .storybook",
    "lint": "eslint --ignore-path .gitignore . && stylelint --ignore-path .gitignore \"**/*.css\"",
    "prerelease": "npm t && npm run lint && npm run build",
    "release": "standard-version",
    "test": "exit 0"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@commitlint/config-conventional": "^7.5.0",
    "@storybook/addon-actions": "^4.1.11",
    "@storybook/addon-knobs": "^4.1.11",
    "@storybook/react": "^4.1.11",
    "babel-cli": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-preset-moxy": "^2.3.5",
    "commitlint": "^7.5.0",
    "eslint": "^5.13.0",
    "eslint-config-moxy": "^6.1.1",
    "external-svg-sprite-loader": "^4.0.1",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.3",
    "marked": "^0.6.0",
    "postcss-cli": "^6.1.1",
    "postcss-preset-moxy": "^2.3.1",
    "storybook-readme": "^4.0.5",
    "stylelint": "^9.10.1",
    "stylelint-config-moxy": "^5.0.0",
    "svg-css-modules-loader": "^1.6.1"
  },
  "peerDependencies": {
    "react": "^16.7.0",
    "react-dom": "^16.7.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "standard-version": {
    "scripts": {
      "posttag": "git push --follow-tags origin master && npm publish"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.css": [
      "stylelint --fix",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "lodash": "^4.17.11",
    "normalize.css": "^8.0.1",
    "rc-slider": "^8.6.6",
    "react-modal": "^3.8.1",
    "react-popper": "^1.0.0",
    "react-transition-group": "^2.5.3"
  }
}
