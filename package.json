{
  "name": "@nomios/web-uikit",
  "version": "0.0.0",
  "description": "Nomios' living web UIKit",
  "main": "dist/index.js",
  "files": [
    "dist",
    "styles"
  ],
  "keywords": [
    "nomios",
    "web-uikit",
    "react",
    "idm",
    "identity-manager"
  ],
  "author": "Pedro Santos <pedro.santos@moxy.studio>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ipfs-shipyard/nomios-web-uikit/issues"
  },
  "homepage": "https://github.com/ipfs-shipyard/nomios-web-uikit#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ipfs-shipyard/nomios-web-uikit.git"
  },
  "scripts": {
    "start": "start-storybook -p 3010 -c .storybook",
    "lint": "eslint --ignore-path .gitignore . && stylelint --ignore-path .gitignore \"**/*.css\"",
    "build": "npm run build:clean && npm run build:js && npm run build:css && npm run build:copy",
    "build:clean": "rimraf dist styles",
    "build:js": "cross-env BABEL_ENV=es babel src --out-dir dist --delete-dir-on-star",
    "build:css": "npm run build:css-components && npm run build:css-styles",
    "build:css-components": "postcss \"src/components/**/*.css\" --base src --dir dist",
    "build:css-styles": "cross-env POSTCSS_ENV=dist postcss \"src/styles/index.css\" --output styles/index.css",
    "build:copy": "npm run build:copy-media && npm run build:copy-styles",
    "build:copy-media": "cpr src/media dist/media",
    "build:copy-styles": "cpr src/styles styles -f \\(index.css\\|base\\)",
    "prerelease": "npm t && npm run lint && npm run build",
    "release": "standard-version",
    "test": "exit 0"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.4",
    "@commitlint/config-conventional": "^7.5.0",
    "@storybook/addon-actions": "^4.1.14",
    "@storybook/addon-knobs": "^4.1.14",
    "@storybook/react": "^4.1.14",
    "babel-loader": "^8.0.5",
    "babel-plugin-dynamic-import-webpack": "^1.1.0",
    "babel-preset-moxy": "^3.0.0",
    "commitlint": "^7.5.2",
    "cpr": "^3.0.1",
    "cross-env": "^5.2.0",
    "eslint": "^5.15.1",
    "eslint-config-moxy": "^7.0.1",
    "external-svg-sprite-loader": "^4.0.2",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "marked": "^0.6.1",
    "postcss-cli": "^6.1.2",
    "postcss-preset-moxy": "^4.0.0",
    "rimraf": "^2.6.3",
    "storybook-readme": "^4.0.5",
    "stylelint": "^9.10.1",
    "stylelint-config-moxy": "^5.0.0",
    "svg-css-modules-loader": "^1.6.1"
  },
  "peerDependencies": {
    "react": "^16.7.0",
    "react-dom": "^16.7.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "standard-version": {
    "scripts": {
      "posttag": "git push --follow-tags origin master && npm publish"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.css": [
      "stylelint --fix",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "lodash": "^4.17.11",
    "normalize.css": "^8.0.1",
    "npm": "^6.9.0",
    "proper-on-transition-end": "^0.3.0",
    "rc-slider": "^8.6.6",
    "react-modal": "^3.8.1",
    "react-popper": "^1.0.0",
    "react-transition-group": "^2.6.0"
  }
}
